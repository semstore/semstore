<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd"><html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"><head>        <title>{$title}</title>        <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />        <meta http-equiv="Content-Style-Type" content="text/css" />        {foreach from=$stylesheets item="stylesheet"}        <link rel="stylesheet" href="{$stylesheet}" type="text/css" />        {/foreach}        {foreach from=$scripts item="script"}        <script type="text/javascript" src="{$script}"></script>        {/foreach}</head><body>        <div id="maincontainer">                <!-- Header Content :: Start -->        {include file="$header"}        <!-- Header Content :: Stop -->                <!-- Toolbar Content :: Start -->        {include file="$toolbar"}        <!-- Toolbar Content :: Stop -->                <table id="subcontainer" cellspacing="0" cellpadding="0">                <tr>                        <td id="left" valign="top">                        <!-- Left Bar Content :: Start -->                        {include file="$left"}                        <!-- Left Bar Content :: Stop -->                        </td>                                                <td id="centre" valign="top">                        <!-- Main Content :: Start -->                        {include file="$centre"}                        <!-- Main Content :: Stop -->                        </td>                </tr>        </table>        <!-- Footer Content :: Start -->        {include file="$footer"}        <!-- Footer Content :: Stop -->                </div>        </body></html>